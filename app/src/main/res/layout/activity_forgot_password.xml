<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ForgotPasswordActivity">

    <ImageView
        android:src="@drawable/bg"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:background="#1A000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/btc"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/white"
            android:text="Forgot Password"/>


        <EditText
            android:id="@+id/forgot_email"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/custom_box"
            android:textSize="@dimen/_15sdp"
            android:textColorHint="@color/white"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="@dimen/_10sdp"
            android:inputType="textEmailAddress"
            android:hint="Email"/>

        <EditText
            android:id="@+id/forgot_Current_password"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/custom_box"
            android:textSize="@dimen/_15sdp"
            android:textColorHint="@color/white"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="@dimen/_10sdp"
            android:inputType="textPassword"
            android:hint="Cureent Password"/>

        <EditText
            android:id="@+id/forgot_n_password"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/custom_box"
            android:textSize="@dimen/_15sdp"
            android:textColorHint="@color/white"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="@dimen/_10sdp"
            android:inputType="textPassword"
            android:hint="New Password"/>

        <EditText
            android:id="@+id/forgot_n_Cpassword"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/custom_box"
            android:textSize="@dimen/_15sdp"
            android:textColorHint="@color/white"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="@dimen/_10sdp"
            android:inputType="textPassword"
            android:hint="Confirm New Password"/>

        <Button
            android:id="@+id/forgot_update_btn"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            app:backgroundTint="@null"
            android:background="@drawable/custom_btn2"
            android:padding="@dimen/_5sdp"
            android:textSize="@dimen/_15sdp"
            android:text="Change Password"/>


    </LinearLayout>

</FrameLayout>